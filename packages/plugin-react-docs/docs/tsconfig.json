{
  "compilerOptions": {
    "composite": true,
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "./modules/**/*.ts",
    "./modules/**/*.tsx",
    ".album/**/*.ts",
    ".album/**/*.tsx",
    "**/*.d.ts",
    "./album.config.ts",
    "theme/**/*.tsx",
    "theme/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}