{
  "compilerOptions": {
    "target": "ES2020",
    "strict": true,
    "module": "ESNext",
    "baseUrl": ".",
    "moduleResolution": "Bundler",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "skipDefaultLibCheck": true,
    "types": [
      "vitest/globals"
    ]
  },
  "include": [
    "helpers/**/*.ts",
    "vitest.config.ts",
    "setup.global.ts",
    "react/**/*.spec.ts"
  ]
}